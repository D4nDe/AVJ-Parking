@model SisEventos.ViewModels.VagaVM

@{
    ViewData["Title"] = "Controle de vagas";
}

<h1>Controle de vagas</h1>

<div class="row">

    <form asp-controller="Vagas"
          asp-action="Create"
          enctype="multipart/form-data"
          method="post"
          class="form-horizontal">

        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="IdCursoSelecionado"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="IdCursoSelecionado" asp-items="Model.Estacionamentos">
                    <option value="">Selecione uma opção</option>
                </select>
                <span class="text-danger" asp-validation-for="IdCursoSelecionado"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Nome"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Nome" />
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Descricao"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Descricao" />
                <span class="text-danger" asp-validation-for="Descricao"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Valor"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Valor" />
                <span class="text-danger" asp-validation-for="Valor"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-area="Admin"
                   asp-controller="Vagas"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>

</div>