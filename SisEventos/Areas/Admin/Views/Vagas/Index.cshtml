@model List<SisEventos.Models.Vaga>
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/tables.css" />

<h1>Controle de vagas</h1>
</br>
<a href="/admin/vagas/create" class="btn btn-primary">Adicionar novo</a>
</br>
</br>
<table class="greyGridTable">
    <thead>
        <tr>
            <th>Id</th>
            <th>Vagas</th>
            <th>Editar | Apagar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vaga in Model)
        {
            <tr>
                <td>@vaga.Id</td>
                <td>
                    <a asp-area="Admin" asp-controller="Vagas" asp-action="Detail" asp-route-id="@vaga.Id">
                        @vaga.Nome
                    </a>
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Vagas" asp-action="Edit" asp-route-id="@vaga.Id">Editar</a>
                    <a asp-area="Admin" asp-controller="Vagas" asp-action="Delete" asp-route-id="@vaga.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
