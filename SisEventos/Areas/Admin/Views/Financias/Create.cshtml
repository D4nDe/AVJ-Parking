@model SisEventos.ViewModels.FinanciaVM
@{
    ViewData["Title"] = "Relatorio de finanças";
}
<h1>Novo relatorio</h1>
<div class="row">
    <form asp-controller="Financias"
          asp-action="Create"
          enctype="multipart/form-data"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Dates"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Dates" />
                <span class="text-danger" asp-validation-for="Dates"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Total"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Total" />
                <span class="text-danger" asp-validation-for="Total"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-area="Admin"
                   asp-controller="Financias"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>