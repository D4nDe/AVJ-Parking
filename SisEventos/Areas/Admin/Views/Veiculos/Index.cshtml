@model List<SisEventos.Models.Veiculo>
@{
    ViewData["Title"] = "Index";
}
<h1>Veiculos cadastrados</h1>
</br>
<a href="/admin/veiculos/create" class="btn btn-primary">Adicionar novo</a>
</br>
</br>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Veiculo</th>
            <th>Editar | Apagar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var veiculo in Model)
        {
            <tr>
                <td>@veiculo.Id</td>
                <td>
                    <a asp-area="Admin" asp-controller="Veiculos" asp-action="Detail" asp-route-id="@veiculo.Id">
                        @veiculo.Nome
                    </a>
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Veiculos" asp-action="Edit" asp-route-id="@veiculo.Id">Editar</a>
                    <a asp-area="Admin" asp-controller="Veiculos" asp-action="Delete" asp-route-id="@veiculo.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
