@model SisEventos.ViewModels.VeiculoVM
@{
    ViewData["Title"] = "Alteração do veiculo";
}
<h1>Alteração do veiculo</h1>
<div class="row">
    <form asp-controller="Veiculos"
          asp-action="Edit"
          enctype="multipart/form-data"
          method="post"
          class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Nome"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Nome" />
                <small class="text-danger" asp-validation-for="Nome"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Descricao"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Descricao" />
                <small class="text-danger" asp-validation-for="Descricao"></small>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Modelo"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Modelo" />
                <span class="text-danger" asp-validation-for="Modelo"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="IdCursoSelecionado"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="IdCursoSelecionado" asp-items="Model.Clientes">
                    <option value="">Selecione uma opção</option>
                </select>
                <span class="text-danger" asp-validation-for="IdCursoSelecionado"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" asp-for="Imagem"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Imagem" />
                <small class="text-danger" asp-validation-for="Imagem"></small>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <a asp-area="Admin"
                   asp-controller="Veiculos"
                   asp-action="Index"
                   class="btn btn-default">Cancelar</a>
                <button type="submit"
                        class="btn btn-success">
                    Salvar
                </button>
            </div>
        </div>
    </form>
</div>
